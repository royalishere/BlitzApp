<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Blitz" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryVariant">@color/my_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_primary</item>
        <item name="colorSecondaryVariant">@color/my_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:itemTextAppearance">@style/textMenu</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Blitz" parent="Base.Theme.Blitz" />
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/grayBackground</item>
    </style>

    <!-- Light theme. -->
    <style name="colorText1">
        <item name="android:textColor">#182693</item>
    </style>

    <style name="colorText2">
        <item name="android:textColor">#00B2FF</item>
    </style>

    <style name="colorHint1">
        <item name="android:textColor">#444444	</item>
    </style>

    <style name="colorBackground1">
        <item name="android:background">#f5f5f5</item>
    </style>

    <style name="colorBackground2">
        <item name="android:background">#3BC3FF</item>
    </style>

    <style name="rounded_editext1"
        parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>
    
    <style name="textMenu">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>



</resources>