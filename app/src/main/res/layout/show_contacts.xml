<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:context=".Fragment.ContactsFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_image"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/hacker"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contact_username"
                style="@style/colorHint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:text="Username"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/user_online_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/background_button"
                android:tint="#4CAF50"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/contact_status"
            style="@style/colorHint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="status"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/contact_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="moblie" />

    </LinearLayout>

    <ImageView
        android:id="@+id/addfr_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:src="@drawable/plus_svgrepo_com" />

    <ImageView
        android:id="@+id/unfr_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:src="@drawable/minus"
        android:visibility="gone" />

</LinearLayout>